{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/tests",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": "../../",
    "paths": {
      "@client/*": ["scripts/client/*"],
      "@server/*": ["scripts/server/*"],
      "@shared/*": ["scripts/shared/*"]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "noEmit": false,
    "sourceMap": true
  },
  "include": ["**/*"]
}